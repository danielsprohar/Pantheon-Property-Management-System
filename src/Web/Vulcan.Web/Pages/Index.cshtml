@page
@using Microsoft.AspNetCore.Authentication
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<h1>Welcome</h1>
<hr />

@if (User.Identity.IsAuthenticated)
{
    <div>
        <h2>Claims</h2>

        <dl>
            @foreach (var claim in User.Claims)
            {
                <dt>@claim.Type</dt>
                <dd>@claim.Value</dd>
            }
        </dl>

        <h2>Properties</h2>

        <dl class="text-wrap">
            @foreach (var prop in (await HttpContext.AuthenticateAsync()).Properties.Items)
            {
                <dt>@prop.Key</dt>
                <dd>@prop.Value</dd>
            }
        </dl>
    </div>
}
