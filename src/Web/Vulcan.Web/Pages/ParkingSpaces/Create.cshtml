@page
@model Vulcan.Web.Pages.ParkingSpaces.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4>Parking Space</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ParkingSpace.ParkingSpaceTypeId" class="control-label"></label>
                <select class="form-control"
                        asp-for="ParkingSpace.ParkingSpaceTypeId"
                        asp-items="Model.ParkingSpaceTypesSelectList">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ParkingSpace.Name" class="control-label"></label>
                <input asp-for="ParkingSpace.Name" class="form-control" />
                <span asp-validation-for="ParkingSpace.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParkingSpace.RecurringRate" class="control-label"></label>
                <input asp-for="ParkingSpace.RecurringRate" class="form-control" />
                <span asp-validation-for="ParkingSpace.RecurringRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParkingSpace.Amps" class="control-label"></label>
                <input asp-for="ParkingSpace.Amps" class="form-control" />
                <span asp-validation-for="ParkingSpace.Amps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParkingSpace.IsAvailable" class="control-label"></label>
                <select class="form-control"
                        asp-for="ParkingSpace.IsAvailable"
                        asp-items="@Model.AvailabilitySelectList">
                </select>
                <span asp-validation-for="ParkingSpace.IsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParkingSpace.Description" class="control-label"></label>
                <textarea asp-for="ParkingSpace.Description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="ParkingSpace.Comments" class="control-label"></label>
                <textarea asp-for="ParkingSpace.Comments" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>